# SQL Server Configuration
SQL_SERVER=true

# Server Connection (choose one method)
# Method 1: Server name with instance
SQL_SERVER_HOST=WSERVER718623-I\SQLEXPRESS

# Method 2: IP address with instance (if hostname doesn't resolve)
# SQL_SERVER_HOST=192.168.1.100\SQLEXPRESS

# Method 3: Server with port (for default instance)
# SQL_SERVER_HOST=your.server.com
# SQL_PORT=1433

# Database Configuration
SQL_DATABASE=InventoryDB

# Authentication Method 1: SQL Server Authentication (Recommended for production)
SQL_USER=your_sql_username
SQL_PASSWORD=your_sql_password

# Authentication Method 2: Windows Authentication (leave SQL_USER and SQL_PASSWORD empty)
# SQL_DOMAIN=your_domain
# SQL_USER=
# SQL_PASSWORD=

# Connection Options
SQL_ENCRYPT=false
SQL_TRUST_CERT=true
SQL_INSTANCE=SQLEXPRESS
SQL_TIMEOUT=30000
SQL_REQUEST_TIMEOUT=30000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Optional: PostgreSQL fallback (if SQL Server unavailable)
DATABASE_URL=postgresql://username:password@localhost:5432/inventory_db